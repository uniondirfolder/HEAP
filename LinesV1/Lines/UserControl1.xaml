             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Lines"
             mc:Ignorable="d" 
             d:DesignHeight="70" d:DesignWidth="90" Width="30" Height="30">
